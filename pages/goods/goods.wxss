/* pages/goods/goods.wxss */
page{
  width:100%;
  height:100%;
}


.head-row{
  display: flex; 
  flex-direction: row;
  font-size: 14px;
}

.row{
  display: flex; 
  flex-direction: row;
}

.touch-item {
  display: flex;
  justify-content: space-between;
  width: 100%;
  overflow: hidden;
}

.body{
  font-size:12px;
  margin-top:10px;
}
.body-row{
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: #1296db;
}

.item-row{
  display: flex; 
  flex-direction: row;
  justify-content: center;
  background-color: #FFFFFF;
  align-items: center;
  height:30px;
  width: 100%;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(60px);
  transform: translateX(60px);
  margin-left: -60px;
}

on-line{
  color: #1296db;
}

off-line{
  color: #FF1F1F;
}

.del {
  background-color: #FF1907;
  width: 60px;
  height:30px;
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size:14px;
  -webkit-transform: translateX(60px);
  transform: translateX(60px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
 
.touch-move-active .item-row, .touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}

 

.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
 }
  
 .modalDlg{
  width: 300px;
  height: 180px;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
 }

 .row{
  display: flex;  
  align-items: center;
  flex-direction: row  ;
  height:42px;
  margin-left:10px;
  margin-right:10px;
  width:200px;
}