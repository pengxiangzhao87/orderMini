/* pages/index/detail/detail.wxss */
page{
  width:100%;
  height:100%;
  background-color: rgb(248, 248, 248)
}
.item{
  background-color: #FFFFFF;
  border-radius: 10px;
  margin:5px 10px 10px 10px;
  font-size:14px; 
  padding-top:10px;
  padding-bottom: 2px;
}
.row{
  display: flex;  
  flex-direction: row  ;
  align-items: center;
  margin-left:10px;
}

.row-name{
  margin-left:0;
  height:40px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


.btn{
  margin-left:auto;
  margin-right:10px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 2px;
  color:#1296db;
  border:0.5px solid #1296db;
  width:40px;
  height:20px;
  font-size:12px;
}

.page_bottom{
  width:100%;
  position:fixed; 
  bottom:10px;
  color:#333333;
  font-weight: bolder;
  z-index:1000;
}


.btn_bottom{
  display: flex;
  align-items: center;
  justify-content: center;
  color:white;
  height:45px;
  margin-left:3%;
  background-color: #1296db;
  font-size:14px; 
  border-radius: 4px;
}

.btn_bottom.gray{
  display: flex;
  align-items: center;
  justify-content: center;
  color:black;
  height:45px;
  margin-left:3%;
  background-color: #999999;
  font-size:14px; 
  border-radius: 4px;
}

.btn_bottom_back{
  background-color: #FFD52E;
